{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="h-screen bg-gray-100">
    <div class="container mx-auto h-full flex justify-center items-center">
        <div class="bg-white rounded-lg shadow-lg w-full md:w-1/2 lg:w-1/3 p-8">
            <div class="md:flex">
                <div class="hidden md:block h40">
              
                </div>
                <div class="md:w-1/2 p-4">
                    <h2 class="text-3xl font-semibold mb-4">Sign into your account</h2>
                    <form method="post">
                        {% if error %}
                            <div class="text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="mb-4">
                            <label for="inputEmail" class="block text-sm font-medium text-gray-600">Email address</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mt-1 p-2 border rounded w-full" autocomplete="email" required autofocus>
                        </div>
                        <div class="mb-4">
                            <label for="inputPassword" class="block text-sm font-medium text-gray-600">Password</label>
                            <input type="password" name="password" id="inputPassword" class="mt-1 p-2 border rounded w-full" autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-600" type="submit">Sign in</button>
                        <a class="block text-sm text-gray-600 mt-2" href="#!">Forgot password?</a>
                        <p class="mt-5 text-sm text-gray-600">Don't have an account? 	<a class="nav-link " href="{{path('app_register')}}">Inscris toi!<p>
                        <a href="#!" class="block text-sm text-gray-600 mt-2">Terms of use.</a>
                        <a href="#!" class="block text-sm text-gray-600">Privacy policy</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
