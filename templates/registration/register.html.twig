{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="h-screen bg-gray-100 flex items-center justify-center">
        <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
            <h1 class="text-3xl font-semibold mb-6">Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="mb-4">
                    <label for="{{ registrationForm.email.vars.id }}" class="block text-sm font-medium text-gray-600">Email address</label>
                    {{ form_widget(registrationForm.email, { 'attr': {'class': 'mt-1 p-2 border rounded w-full'} }) }}
                </div>
                <div class="mb-4">
                    <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-sm font-medium text-gray-600">Password</label>
                    {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'mt-1 p-2 border rounded w-full'} }) }}
                </div>
                <div class="mb-4">
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="flex items-center">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        <span class="ml-2 text-sm text-gray-600">I agree to the terms and conditions</span>
                    </label>
                </div>

                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-600 w-full">
                    Register
                </button>
            {{ form_end(registrationForm) }}
        </div>
    </section>
{% endblock %}
